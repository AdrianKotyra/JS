const CapitalizeName = function(name){
    const newArrayNames = []
    const names = name.split(" ")
    for (n of names) {

        // newArrayNames.push(n[0].toUpperCase() + n.slice(1))
        newArrayNames.push(n.replace(n[0], n[0].toUpperCase()))


    }
    const newArrayNamesjoined = newArrayNames.join(" ")

    console.log(newArrayNamesjoined);





    // const nameCapitalized = name.split(" ")[0]
    // const nameCapitalizedletter = nameCapitalized[0].toUpperCase() + nameCapitalized.slice(1)

    // const surnameCapitalized = name.split(" ")[1]
    // const surnameCapitalizedletter = surnameCapitalized[0].toUpperCase() + surnameCapitalized.slice(1)


    // console.log(nameCapitalizedletter, surnameCapitalizedletter);

}
CapitalizeName("adrian kotyra darber")
